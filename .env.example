# Database Configuration
DB_HOST=localhost      # SQL Server host
DB_PORT=1433          # Default SQL Server port
DB_USERNAME=sa        # SQL Server username
DB_PASSWORD=your_strong_password
DB_NAME=ati_portal    # Database name

# Azure AD Configuration
AZURE_AD_TENANT_ID=your_tenant_id
AZURE_AD_CLIENT_ID=your_client_id
AZURE_AD_CLIENT_SECRET=your_client_secret

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=1d

# OneDrive Configuration
ONEDRIVE_HR_FOLDER_PATH=/HR Documents
# OneDrive uses the Azure AD credentials above for authentication
# Make sure the Azure AD application has the following permissions:
# - Files.ReadWrite.All
# - Sites.ReadWrite.All
# - User.Read